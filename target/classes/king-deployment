apiVersion: apps/v1
kind: Deployment
metadata:
  name: king
spec:
  replicas: 1
  selector:
    matchLabels:
      app: king
  template:
    metadata:
      labels:
        app: king
    spec:
      containers:
        -
          image: thisIsCamelCasingRule/kingservice
          name: king
          imagePullPolicy: Never
          ports:
            -
              containerPort: 8081
              name: king
          env:
            - name: POSTGRES_ENDPOINT
              value: "jdbc:postgresql://192.168.0.101:5432/"
            - name: POSTGRES_PASSWORD
              value: "123"
            - name: POSTGRES_USERNAME
              value: "postgres"
            - name: KING_URL
              value: "http://king"